@model DreamCushion.Models.PillowMaterialViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Administrator"))
    {
<p>
    <a asp-action="Create">Create New</a>
</p>
    }

<form asp-controller="Pillows" asp-action="Index" method="get">
    <p>

        <select asp-for="PillowMaterial" asp-items="Model.Material">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pillows![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pillows![0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pillows![0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pillows![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pillows![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pillows!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>

                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }

                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }

            </td>
        </tr>
}
    </tbody>
</table>
